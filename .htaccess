RewriteEngine On

# 1. REMOVE .PHP EXTENSION
# If user types /about.php, redirect to /about
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R=301,L]

# Internally map /about to /about.php so the server can find it
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*?)/?$ $1.php [NC,L]

# 2. REMOVE .HTML EXTENSION (If you have any)
# If user types /page.html, redirect to /page
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.html [NC]
RewriteRule ^ %1 [R=301,L]

# Internally map /page to /page.html
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*?)/?$ $1.html [NC,L]

# 3. FORCE HTTPS (Optional - Good for security)
# RewriteCond %{HTTPS} off
